{
  "name": "web3js-expo",
  "displayName": "Mobile Expo Boilerplate",
  "description": "A template for building a Solana mobile app with Expo and React Native.",
  "usecase": "Mobile",
  "keywords": [
    "expo",
    "mobile-wallet-adapter",
    "react-native",
    "solana-web3js"
  ],
  "create-solana-dapp": {
    "instructions": [
      "To buld the Android app locally, run this:",
      "+{pm} run android"
    ],
    "versions:": {
      "adb": "33.0.0"
    }
  },
  "expo": {
    "doctor": {
      "reactNativeDirectoryCheck": {
        "exclude": [
          "react-native-snackbar"
        ],
        "listUnknownPackages": false
      }
    }
  },
  "scripts": {
    "android": "expo run:android",
    "android:build": "expo prebuild -p android",
    "build": "tsc --noEmit && npm run android:build",
    "ci": "tsc --noEmit && npm run lint:check && npm run fmt:check && npm run android:build",
    "dev": "expo start",
    "doctor": "npx -y expo-doctor@latest",
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check .",
    "ios": "expo run:ios",
    "lint": "expo lint --fix",
    "lint:check": "expo lint",
    "reset-project": "node ./scripts/reset-project.js",
    "start": "expo start",
    "web": "expo start --web"
  },
  "main": "./index.js",
  "version": "1.0.0",
  "dependencies": {
    "@expo/vector-icons": "^15.0.2",
    "@react-native-async-storage/async-storage": "2.2.0",
    "@react-native-clipboard/clipboard": "^1.16.2",
    "@react-navigation/bottom-tabs": "^7.3.10",
    "@react-navigation/elements": "^2.3.8",
    "@react-navigation/native": "^7.1.6",
    "@rn-primitives/dropdown-menu": "^1.2.0",
    "@rn-primitives/portal": "^1.3.0",
    "@solana/spl-token": "^0.4.13",
    "@solana/web3.js": "^1.98.4",
    "@tanstack/react-query": "^5.85.5",
    "@wallet-ui/react-native-web3js": "^3.0.0",
    "expo": "~54.0.21",
    "expo-blur": "~15.0.7",
    "expo-constants": "~18.0.9",
    "expo-dev-client": "~6.0.20",
    "expo-font": "~14.0.8",
    "expo-haptics": "~15.0.7",
    "expo-image": "^3.0.9",
    "expo-linear-gradient": "~15.0.7",
    "expo-linking": "~8.0.8",
    "expo-router": "~6.0.10",
    "expo-splash-screen": "~31.0.10",
    "expo-status-bar": "~3.0.8",
    "expo-symbols": "~1.0.7",
    "expo-system-ui": "~6.0.7",
    "expo-web-browser": "~15.0.8",
    "js-base64": "^3.7.8",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-quick-crypto": "^1.0.6",
    "react-native-reanimated": "~4.1.2",
    "react-native-safe-area-context": "5.6.1",
    "react-native-screens": "~4.16.0",
    "react-native-snackbar": "^2.9.0",
    "react-native-svg": "15.12.1",
    "react-native-web": "~0.21.1",
    "react-native-webview": "13.15.0",
    "react-native-worklets": "0.5.1",
    "react-qr-code": "^2.0.16"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@types/react": "~19.1.17",
    "eslint": "^9.33.0",
    "eslint-config-expo": "~10.0.0",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  },
  "private": true
}
